srcdir=../
top_builddir= ../..
builddir_bin=$(top_builddir)/build/bin
builddir_lib=$(top_builddir)/build/lib
builddir_inc=$(top_builddir)/build/include
builddir_doc=$(top_builddir)/build/doc

USE_CORBA = @USE_CORBA@

RMLINCLUDE = @rmlinc@
CFLAGS = @DEFS@ $(USE_CORBA) -DLDFLAGS_SENDDATA="\"@LIBSENDDATA_LDFLAGS@ -lpthread\""

ifdef USE_CORBA
  CORBASRC = omc_communication.cc omc_communication_impl.cpp corbaimpl.cpp
  CORBAINCL = @CORBACFLAGS@
else
  CORBASRC = corbaimpl_stub.cpp
  CORBAINCL =  
endif

SHELL	= /bin/sh
CC	= gcc
IDL	= @IDLCMD@
CFLAGS	+= -O3 -I$(RMLINCLUDE) -I$(top_builddir)/c_runtime  -I$(top_builddir)/c_runtime/superlu/include -I$(srcdir) -I. $(CORBAINCL) -I../ -Ilpsolve
CXXFLAGS = $(CFLAGS)
SRC	= rtopts.c socketimpl.c printimpl.c systemimpl.c settingsimpl.c dynload.c SimulationResults.c

CPPSRC  = unitparser.cpp unitparserext.cpp ptolemyio.cpp daeext.cpp ErrorMessage.cpp errorext.cpp optmanager.cpp systemimplmisc.cpp $(CORBASRC)
OBJ     = $(SRC:.c=.o) $(CPPSRC:.cpp=.o) $(CPPSRC:.cc=.o)

all: runtime.a 

runtime.a : $(OBJ)
	$(AR) -s -r $@ $(OBJ)

omc_communication.cc omc_communication.h : omc_communication.idl
	$(IDL) omc_communication.idl

omc_communication.h: omc_communication_impl.cpp corbaimpl.cpp

dynload.o: systemimpl.h ../Absyn.h ../Values.h
systemimpl.o : Makefile

clean:
	$(RM) -rf *.a *.o omc_communication.cc omc_communication.h omc_communication-*
