#		(cd $$d ; $(MAKE)) \
#	done

clean:
	@for d in $(SUBDIRS); do \
		(cd $$d ; $(MAKE) clean) \
	done
	(cd omc_release; $(MAKE) clean)
	-$(RM) -f $(SRCH)
	-$(RM) -f $(PROG)$(EXEEXT)

dclean:
	@for d in $(SUBDIRS); do \
		(cd $$d ; $(MAKE) clean) \
	done
	(cd omc_debug; $(MAKE) clean)
	-$(RM) -f $(SRCRDB)
	-$(RM) -f $(SRCH)
	-$(RM) -f $(PROGD)$(EXEEXT)


reallyclean:
	@for d in $(SUBDIRS); do \
		(cd $$d ; $(MAKE) reallyclean) \
	done
	(cd omc_release; $(MAKE) reallyclean)
	-$(RM) -f $(SRCH)
	-$(RM) -f $(PROG)$(EXEEXT)

dreallyclean: 
	@for d in $(SUBDIRS); do \
		(cd $$d ; $(MAKE) reallyclean) \
	done
	(cd omc_debug; $(MAKE) reallyclean)
	-$(RM) -f $(SRCRDB)
	-$(RM) -f $(SRCH)
	-$(RM) -f $(PROGD)$(EXEEXT)

report:
	@(cd report ; $(MAKE))

depend:	
	-$(RM) .depend
	for f in $(SRCRML); do \
	  echo `echo $$f | sed "s/\.rml/.o/"`: $$f `sed -n -e 's/.*with "\(.*\)\.rml".*/\1.sig/p' < $$f | egrep -v 'nothing'` >> .depend ; \
	done

.PRECIOUS: Makefile

Makefile: Makefile.in
	$(top_builddir)/config.status Makefile
