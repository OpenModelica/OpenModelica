	Util.string_append_list([tvar,"=size_of_dimension_integer_array(",var1,
				 ",1);"]) => stmt &
	c_add_statements(cfn,[stmt]) => cfn' &
	c_add_variables(cfn',[decl]) => cfn'' &
	Util.string_append_list(["integer_array_make_index_array(&",var1,")"]) => idx &
	let idxsize = tvar 
