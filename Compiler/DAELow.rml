	Util.list_map(eqn_lst,equation_to_residual_form) => eqn_lst2 &
	list_equation(eqn_lst2) => eqns2
	------------------------
	to_residual_form(DAELOW(vars,knvars,eqns,seqns,ieqns,ae,ialg,wc))
