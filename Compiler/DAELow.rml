  rule	Exp.print_exp_str e1 => s1 &
	Exp.print_exp_str e2 => s2 &
	Util.string_append_list([s1," = ",s2]) => res
	--------------------
	equation_str(EQUATION(e1,e2)) => res

  rule	int_string(indx) => indx_str &
	Util.string_append_list(["Array eqn no: ",indx_str,"\n"]) => res
	--------------------
	equation_str(ARRAY_EQUATION(indx,expl)) => res

  rule	Exp.print_component_ref_str cr => s1 &
	Exp.print_exp_str e2 => s2 &
	Util.string_append_list([s1," := ",s2]) => res
	--------------------
	equation_str(SOLVED_EQUATION(cr,e2)) => res

  rule	Exp.print_component_ref_str cr => s1 &
	Exp.print_exp_str e2 => s2 &
	int_string(i) => is &
	Util.string_append_list([s1," := ",s2 ,"when clause no:",is,"\n"]) => res
	----------------------------------------------------
	equation_str(WHEN_EQUATION(WHEN_EQ(i,cr,e2))) => res

  rule	Exp.print_exp_str e => s1 &
	Util.string_append_list([s1, "= 0"]) => res
	----------------------------------------------------------
	equation_str(RESIDUAL_EQUATION(e)) => res

  rule	int_string(i) => is &
	Util.string_append_list(["Algorithm no: ",is,"\n"]) => res
	----------------------------------------------------------
	equation_str(ALGORITHM(i,_,_)) => res
end


(** relation: remove_simple_equations
 **
 ** This relation moves simple equations on the form a=b from equations 2nd 
 ** in DAELow to simple equations 3rd in DAELow to speed up assignment alg.
 ** inputs:  (vars: Variables,
              knownVars: Variables,
              eqns: Equation list,
              simpleEqns: Equation list,
	      initEqns : Equatoin list,
              binTree: BinTree) 
 ** outputs: (Variables, Variables, Equation list, Equation list
 **	      Equation list)
 **)
relation remove_simple_equations: (Variables,
                                   Variables,
                                   Equation list,
                                   Equation list,
				   Equation list,
                                   BinTree) 
	=> (Variables, Variables, Equation list, Equation list, 
	    Equation list) =

  rule	VarTransform.empty_replacements() => repl &
	remove_simple_equations2(eqns,vars,knvars,empty_bintree,states,repl) 
	  => (eqns',seqns,movedvars',vartransf) &
 	Debug.fcall("dumprepl",VarTransform.dump_replacements, vartransf) &
	VarTransform.replace_equations(eqns',vartransf) => eqns'' &
	VarTransform.replace_equations(seqns,vartransf) => seqns' &
	VarTransform.replace_equations(ieqns,vartransf) => ieqns' &
	move_variables(vars,knvars,movedvars')=> (vars',knvars') &

	rename_derivatives(eqns'') => eqns''' &
	rename_derivatives(seqns') => seqns'' & 
	rename_derivatives(ieqns') => ieqns'' &
	
	list_append(seqns'',reqns) => seqns''' 
	(*& print_vars_statistics(vars',knvars')*)
	-------------------------------------
	remove_simple_equations(vars,knvars,eqns,reqns,ieqns,states) 
	  => (vars',knvars',eqns''',seqns''',ieqns'')

  rule	print "-remove_simple_equations failed\n"  
	------------------------
	remove_simple_equations(_,_,_,_,_,_) => fail
end

(** relation: rename_derivatives
 ** author: PA
 **
 ** Renames $DER$x to der(x) for all equations given as argument.
 **
 **)

relation rename_derivatives: Equation list => Equation list =

  axiom	rename_derivatives([]) => []

  rule	Exp.traverse_exp(e1,rename_derivatives_exp,"$DER$") 
	  => ((e1',_)) &
	Exp.traverse_exp(e2,rename_derivatives_exp,"$DER$") 
	  => ((e2',_)) &
	  rename_derivatives(es) => es' 
	---------------------------
	rename_derivatives(EQUATION(e1,e2)::es) 
	  => (EQUATION(e1',e2')::es')

  rule	Exp.traverse_exp(e1,rename_derivatives_exp,"$DER$") 
	  => ((e1',_)) &
	rename_derivatives(es) => es' 
	---------------------------
	rename_derivatives(SOLVED_EQUATION(cr1,e1)::es) 
	  => SOLVED_EQUATION(cr1,e1')::es'

  rule	rename_derivatives(es) => es' 
	---------------------------
	rename_derivatives(e::es) 
	  => e::es'
end

(** relation rename_derivatives_exp
 ** 
 ** Renames "$derivative$x" to der(x)
**)

relation rename_derivatives_exp: ((Exp.Exp* string)) =>((Exp.Exp* string)) =

  rule	string_length(str) => slen &
	Util.strncmp(str,id,slen) => true &
	System.stringReplace(id,str,"") => id' 
	--------------------------------
	rename_derivatives_exp((Exp.CREF(Exp.CREF_IDENT(id,s),tp),str))
	  => ((Exp.CALL(Absyn.IDENT("der"),[Exp.CREF(Exp.CREF_IDENT(id',s),tp)],false,true),str))

  axiom	rename_derivatives_exp(((e,str))) => ((e,str))

end

(** relation: rename_derivatives_2
 ** author: PA
 **
 ** Renames der(x) to $DER$x for all equations given as argument.
 **
 **)

relation rename_derivatives_2: Equation list => Equation list =

  axiom	rename_derivatives_2([]) => []

  rule	Exp.traverse_exp(e1,rename_derivatives_exp_2,"$DER$") 
	  => ((e1',_)) &
	  Exp.traverse_exp(e2,rename_derivatives_exp_2,"$DER$") 
	  => ((e2',_)) &
	  rename_derivatives_2(es) => es' 
	---------------------------
	rename_derivatives_2(EQUATION(e1,e2)::es) 
	  => (EQUATION(e1',e2')::es')
	  
  rule	Exp.traverse_exp(e1,rename_derivatives_exp_2,"$DER$") 
	  => ((e1',_)) &
	  rename_derivatives_2(es) => es' 
	---------------------------
	rename_derivatives_2(SOLVED_EQUATION(cr1,e1)::es) 
	  => SOLVED_EQUATION(cr1,e1')::es'
	  
  rule	rename_derivatives_2(es) => es' 
	---------------------------
	rename_derivatives_2(e::es) 
	  => e::es'
