**)
relation get_array_var:( Exp.ComponentRef, Variables) => (Var list, int list) =
	
	
  rule	(* one dimensional arrays *)
	Exp.subscript_cref(cr,[Exp.INDEX(Exp.ICONST(1))]) => cr' &
	hash_component_ref(cr') => hval &
