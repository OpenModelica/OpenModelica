// name: sample3
// keywords: events, sample
// status: correct
// cflags: +std=2.x
// teardown_command: rm -rf *sampleTests.sample3* output.log
//
// Event handling with more then one sample call outside when clause
// testcase for Bug 1505.
//
//

loadString("
package sampleTests
  model sample3
    type Int16 = Integer;

    record tstR
      Int16 val;
    end tstR;

    connector ct
      tstR el;
    end ct;

    block tst2B
     output ct i1;
     output ct i2;
     output ct i3;
     Boolean clock1, clock2;
     Integer cntr1(start=0);
     Integer cntr2(start=2);
     
    equation
      clock1 = sample(0,0.1);
      clock2 = sample(0,0.001);
      i1.el.val = cntr1+1;
      i2.el.val = cntr1+40;
      i3.el.val = cntr2;
      
    algorithm
      when clock1 then
        cntr1 := pre(cntr1)+1;
      end when;
      
      when clock2 then
        cntr2 := pre(cntr2)+1;
      end when;
    end tst2B;
  end sample3;
end sampleTests;
"); getErrorString();

simulate(sampleTests.sample3.tst2B, startTime=0.0, stopTime=1.0); getErrorString();
"i1.el.val";
val(i1.el.val,0);
val(i1.el.val,0.5);
val(i1.el.val,1.0);
"i2.el.val";
val(i2.el.val,0);
val(i2.el.val,0.5);
val(i2.el.val,1.0);
"i3.el.val";
val(i3.el.val,0);
val(i3.el.val,0.5);
val(i3.el.val,1.0);

