loadString("
package sampleTests
  model sample1
    parameter Real offer = 1000;
    Real storage(start=0);
    
  equation
    when sample(1, 1) then
      storage = pre(storage) + offer;
    end when;
  end sample1;
end sampleTests;
"); getErrorString();

simulate(sampleTests.sample1, startTime=0.0, stopTime=10.0, numberOfIntervals=5); getErrorString();
val(storage, 0.1);
val(storage, 1.1);
val(storage, 3.1);
val(storage, 5.1);
val(storage, 7.1);
val(storage, 9.1);

