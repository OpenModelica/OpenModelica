// name: impureTest
// keywords: impure
// status: correct
// cflags:
// teardown_command: rm -rf otherTests.impureTest_* output.log
//
//  case for initialization of forest model
//


loadString("
within ;
package otherTests
  impure function fimpure
    output Integer x;
    external \"C\" x=_impure() annotation(Include=\"int _impure()
                                                    {
                                                       static int counter=0;
                                                       return ++counter;
                                                    }\");
  end fimpure;

  model impureTest
    Integer x;
  equation
    when sample(-0.05, 0.1) then
      x = fimpure();
    end when;
  end impureTest;
end otherTests;
"); getErrorString();

simulate(otherTests.impureTest); getErrorString();
val(x, 0.0);
val(x, 0.1);
val(x, 0.2);
val(x, 0.3);
val(x, 0.4);
val(x, 0.5);
val(x, 0.6);
val(x, 0.7);
val(x, 0.8);
val(x, 0.9);

