// name: Bug1728.mos
// keywords: mixed system
// status: correct
//
// test for #1728
//

loadString("
model Bug1728
  type modetype = enumeration(on, off);
  modetype mode(start = modetype.off);
  Real v(start = 0);
algorithm
  when (v > 0.5) then
    mode := modetype.on;
  elsewhen (v <= 0.5) then
    mode := modetype.off;
  end when;
equation
  if (mode == modetype.off) then
    v = time * 1.1;
  else
    v = time * 1.1 + 40;
  end if;
end Bug1728;
"); getErrorString();

simulate(Bug1728); getErrorString();
val(mode, {0.0, 0.6, 1.0});
val(v, {0.0, 0.6, 1.0});

