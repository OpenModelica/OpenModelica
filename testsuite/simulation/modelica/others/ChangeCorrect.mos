loadString("
model bug_2262_
  Boolean b[0];
  Boolean anychange;

algorithm
  anychange := false;
  for i in (1:size(b, 1)) loop
    anychange := anychange or change(b[i]);
  end for;
end bug_2262_;
"); getErrorString();

simulate(bug_2262_); getErrorString();
val(anychange, 0.0);
val(anychange, 0.5);

