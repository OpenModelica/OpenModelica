// name: whenTest1
// keywords: event, when
// status: correct
// cflags:
// teardown_command: rm -rf eventTests.whenTest1* _eventTests.whenTest1* output.log
//
//  case for a never active when equation
//

loadString("
within ;
package eventTests
  model whenTest1
    Real x;
  equation 
    when time > -1.0 then
      x = 1;
    end when;
  end whenTest1;
end eventTests;
"); getErrorString();

simulate(eventTests.whenTest1); getErrorString();
val(x, 0.0);
val(x, 0.5);
val(x, 1.0);

