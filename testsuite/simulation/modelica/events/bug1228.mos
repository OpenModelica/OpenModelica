loadString("
package eventTests
  model bug1228
    Real x,y;
    Real a,b;
  equation
    when sample(0,0.2) then
      y = 7 - 2*x+time;
    end when;
    x + y = 5;

    a + b = 5;
    when sample(0,0.2) then
      b = 7 - 2*a+time;
    end when;
  end bug1228;
end eventTests;
"); getErrorString();

simulate(eventTests.bug1228); getErrorString();
val(x,0.0);
val(x,0.5);
val(x,1.0);
val(y,0.0);
val(y,0.5);
val(y,1.0);


