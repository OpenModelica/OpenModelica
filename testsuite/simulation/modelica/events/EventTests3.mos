// name:     EventTest3
// keywords: EventHandling, Realations
// status: correct
// teardown_command: rm -rf testEvents3* output.log

loadString("
model testEvents3
  Real x;
equation
  der(x) = 1.0;
  when time > 0.5 then
    reinit(x, 0.0);
  end when;
end testEvents3;
"); getErrorString();

simulate(testEvents3, simflags="-lv=LOG_EVENTS"); getErrorString();

