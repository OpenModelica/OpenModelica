// name: sample2
// keywords: event, when, sample
// status: correct
// cflags:
// teardown_command: rm -rf eventTests.sample2* _eventTests.sample2* output.log
//
//  case for a sample call
//

loadString("
within ;
package eventTests
  model sample2
    Real x, y;
    Boolean condition1;
    Boolean condition2;
  algorithm
    condition1 := sample(0.0, 0.1);
    condition2 := sample(0.0, 0.1);
    when condition1 then
      x := pre(x) + 0.1;
    end when;
    when condition2 then
      y := pre(y) + 0.1;
    end when;
  end sample2;
end eventTests;
"); getErrorString();

simulate(eventTests.sample2); getErrorString();
val(x, 0.05);
val(x, 0.55);
val(y, 0.05);
val(y, 0.55);


