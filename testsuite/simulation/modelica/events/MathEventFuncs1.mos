loadString("
model mathEvents1
  Real u,y1,y2;
equation
  u = 10*sin(10*time);
  y1 = if u > 0 then integer(u) else integer(u)-1;
  y2 = if (u > 0) then integer(floor(u + 0.5)) else integer(ceil(u - 0.5));
end mathEvents1;
");
getErrorString();

simulate(mathEvents1,numberOfIntervals=500);
getErrorString();

print("\n-y1-");
val(y1,0);
val(y1,0.2);
val(y1,0.4);
val(y1,0.6);
val(y1,0.8);
val(y1,1);

print("\n-y2-");
val(y2,0);
val(y2,0.2);
val(y2,0.4);
val(y2,0.6);
val(y2,0.8);
val(y2,1);


print("\n-u-");
val(u,0);
val(u,0.2);
val(u,0.4);
val(u,0.6);
val(u,0.8);
val(u,1);

