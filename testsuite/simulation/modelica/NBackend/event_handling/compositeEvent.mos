loadString("
model CompositeEvent
  Real x(start=0, fixed=true);
  Integer n(start=0, fixed=true);
equation
  der(x) = 1;
  when x < 1 and (x > 0.5 and sample(0.125,0.25)) then
    n = pre(n) + 1;
  end when;
end CompositeEvent;
"); getErrorString();
simulate(CompositeEvent, simflags="-lv LOG_EVENTS"); getErrorString();
val(n,0.125);
val(n,0.375);
val(n,0.625);
val(n,0.875);

