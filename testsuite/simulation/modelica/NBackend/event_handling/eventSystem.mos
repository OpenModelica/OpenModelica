// name: eventSystem
// keywords: NewBackend
// status: correct

loadString("
model eventSystem
  Real x1(start = 0.0, fixed = true);
  Real x2(start = -1.0, fixed = true);
  Real x3(start = 1.0, fixed = true);
  Real y;
  Real z;
  parameter Real t = 0.2;
equation
  assert(z <= 1, \"z is wrong\");

  if time > 2*t then
    y = cos(time);
  else
    y = sin(time);
  end if;

  when t < time then
    x1 = pre(x1) + 1;
  end when;

  when sample(0.1, t) then
    x2 = pre(x2) + 0.5;
  end when;

  z = sin(time);
  when z > 0.5 then
    x3 = pre(x3) + 2;
  end when;
end eventSystem;
"); getErrorString();

setCommandLineOptions("--newBackend"); getErrorString();
simulate(eventSystem, simflags="-lv=LOG_EVENTS"); getErrorString();

val(x1, 0.19);
val(x1, 0.21);

val(x2, 0.29);
val(x2, 0.31);

val(x3, 0.52);
val(x3, 0.53);

