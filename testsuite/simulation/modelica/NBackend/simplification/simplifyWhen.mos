loadString("
model SimplifyWhen
  Integer n;
equation
  when {time > 0.5, initial()} then
    n = integer(time);
  end when;
end SimplifyWhen;
"); getErrorString();
setCommandLineOptions("--newBackend -d=dumpSimplify"); getErrorString();
buildModel(SimplifyWhen); getErrorString();

