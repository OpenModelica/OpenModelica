loadString("
model backSample_MWE
  Clock clk = Clock(0.1);
  Real a = sample(time, clk);
  Real sub1 = backSample(a, -2);
end backSample_MWE;
"); getErrorString();

setCommandLineOptions("--newBackend"); getErrorString();

simulate(backSample_MWE, simflags="-lv=LOG_SYNCHRONOUS"); getErrorString();
diffSimulationResults("backSample_MWE_res.mat", "ReferenceFiles/backSample_MWE_res.mat", "backSample_MWE_diff.csv", 1e-8);

