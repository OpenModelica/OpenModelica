// status: correct
// cflags: -d=-newInst
//
// test for #2756
//

loadString("
model bug2756
  model struct
    Real R;
  end struct;

  struct x[2];
  Real s;
equation

algorithm
  x[1].R := 1;
  x[2].R := 1;
  s := 0;
  for i in 1:2 loop
    s := s + x[i].R;
  end for;
  assert(abs(s-2) < 1e-30, \"Assertion failed\");
end bug2756;
"); getErrorString();

simulate(bug2756,simflags="-output s"); getErrorString();

