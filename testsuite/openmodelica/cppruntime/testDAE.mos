// name: testDAE
// keywords: DAE mode
// status: correct
// teardown_command: rm -f *DAETest*

setCommandLineOptions("--simCodeTarget=Cpp");

loadString("
model DAETest
  Real x1(start = -1);
  Real x2;
  Real x3;
equation
  der(x1) = x3;
  x2 * (1 - x2) = 0;
  x1*x2 + x3*(1 - x2) = time;
  annotation(experiment(StopTime = 1), __OpenModelica_commandLineOptions = \"--daeMode\");
end DAETest;
");
getErrorString();

simulate(DAETest);

val(x1, 1);
val(x2, 1);
val(x3, 1);

