loadString("function fac
  input Integer i;
  input Integer acc = 1;
  output Integer res;
algorithm
  res := match SOME(i)
    local
      Integer ii;
    case SOME(ii) guard(ii > 1) then fac(ii-1, acc*ii);
    else acc;
  end match;
end fac;");getErrorString();
fac({1,2,3,4,5,100000});getErrorString();

