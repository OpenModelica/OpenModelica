ifeq ($(OMC_MINIMAL_RUNTIME),)
OPTIONAL_LIBS=$(CDASKRDIR)/libcdaskr.a
else
override CFLAGS += -DOMC_MINIMAL_RUNTIME
endif

CXXFLAGS = $(CFLAGS)
