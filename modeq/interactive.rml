relation get_nth_public_component_in_class:  (Absyn.Class,int) => Absyn.Element =
	
  rule	get_nth_component_in_elementitems(elt,n) => res
	-----------------------------------------------
	get_nth_public_component_in_class (Absyn.CLASS(a,b,c,d,e,Absyn.PARTS(Absyn.PUBLIC(elt)::lst,cmt)),n) 
	    => res
	    
	    (* The rule above failed, i.e the nth number is larger than # elements in first public list *)
	    (* subtract and try next public list *)
  rule	count_components(elt) => c1 &
	int_sub(n,c1) => newn &
	get_nth_public_component_in_class (Absyn.CLASS(a,b,c,d,e,Absyn.PARTS(rest,cmt)),newn) => res
	------------------------------------------------------------------------------------
	get_nth_public_component_in_class (Absyn.CLASS(a,b,c,d,e,Absyn.PARTS(Absyn.PUBLIC(elt)::rest,cmt)),n) => res

  rule	get_nth_public_component_in_class (Absyn.CLASS(a,b,c,d,e,Absyn.PARTS(lst,cmt)),n) => res
	-----------------------------------------------------------------------
	get_nth_public_component_in_class (Absyn.CLASS(a,b,c,d,e,Absyn.PARTS(_::lst,cmt)),n) => res
	
  axiom get_nth_public_component_in_class (Absyn.CLASS(a,b,c,d,e,Absyn.PARTS([],cmt)),_) => fail
  axiom get_nth_public_component_in_class (Absyn.CLASS(a,b,c,d,e,Absyn.DERIVED(_,_,_,_)),_) => fail

end

