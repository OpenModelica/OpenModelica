ANTLR_HOME = @antlrhome@

ANTLR_INCP = -I@antlrinc@
ANTLR_LIBP = -L@antlrlib@
LIBSOCKET = @LIBSOCKET@

SHELL	= /bin/sh
CC	= gcc
CFLAGS	= $(USE_CORBA)
RMLHOME	= @rmlhome@
RMLINC  = -I$(RMLHOME)/include/plain

USE_CORBA = @USE_CORBA@
CORBAHOME = @CORBAHOME@

srcdir = ..
top_builddir = ../..

include $(srcdir)/Makefile.common


PROG = modeqd
RML	= @rmlc_bin@ -g -Wc,-O3 -Wr,-East,-Ecps,-Efol
LDFLAGS = -L$(RMLHOME)/lib/plain $(ANTLR_LIBP) -lrml_g -lm -lantlr $(LIBSOCKET) $(CORBALIB) -lm -lpthread -lreadline

#PROG = modeq
#RML	= @rmlc_bin@ -Wc,-O3
#LDFLAGS = -L$(RMLHOME)/lib/plain $(ANTLR_LIBP) -lrml -lm -lantlr $(LIBSOCKET) $(CORBALIB) -lm -lpthread 



SUBDIRS	= $(srcdir)/runtime $(srcdir)/absyn_builder $(srcdir)/modpar

all : $(ALLRML) subdirs $(PROG)


.SUFFIXES:
.SUFFIXES: .o .rml .h
.PHONY: all subdirs report vctarget absyn_subdir clean reallyclean

SRCHSRCDIR = $(SRCH:%.h=$(srcdir)/%.h)


$(ALLRML): %.rml : $(srcdir)/%.rml
	cp $< $@

$(SRCO): %.o : %.c %.h
	$(RML) -c $<

$(SRCC): %.c : %.rml
	$(RML) +C $<

$(SRCHSRCDIR) : $(srcdir)/%.h : %.h
	cp $< $@

$(SRCH): %.h : %.rml
	$(RML) -c $<

%.sig : %.rml
	$(srcdir)/rml2sig/rmldep.sh $<


vctarget: $(SRCC) absyn_subdir


absyn_subdir:
	@(cd $(srcdir)/absyn_builder ; $(MAKE) vctarget)

$(PROG): $(SRCO) $(AST) $(RTOBJ)
	g++ -o $(PROG) $(SRCO) $(AST) $(RTOBJ) $(LDFLAGS)

subdirs: $(SRCHSRCDIR)
	@for d in $(SUBDIRS); do \
		(cd $$d ; $(MAKE)) \
	done

clean:
	@for d in $(SUBDIRS); do \
		(cd $$d ; $(MAKE) clean) \
	done
	(cd $(srcdir) && $(RM) $(SRCH))
	$(RM) $(SRCO) $(SRCC) $(SRCH) $(PROG) *~

reallyclean: clean
	$(RM) $(ALLRML) $(ALLRML:.rml=.sig)  $(SRCRDB)

# don't remove these files after intermediate build steps
.PRECIOUS: Makefile $(ALLRML)

Makefile: Makefile.in
	$(top_builddir)/config.status Makefile


## dependencies
include $(srcdir)/.depend
