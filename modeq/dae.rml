relation dump_debug_element : Element => () =

  rule	Print.print_buf "VAR(" &
	Exp.print_component_ref cr & Print.print_buf ", " &
	dump_kind vk &
	Print.print_buf ")"
	-------------
	dump_debug_element VAR(cr,vk,vd,ty,NONE,_,_,_,_)

