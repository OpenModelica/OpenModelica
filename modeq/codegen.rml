	  c_add_statements(c_empty_function,[stmt]) => cfn1 &
	generate_read r => cfn2 &
	c_merge_fn(cfn1,cfn2) => cfn
	----------
	generate_read DAE.VAR(id,vk,DAE.INPUT,t,_,_::_)::r => cfn

	
  rule	generate_read r => cfn
	-------
	generate_read _::r => cfn


end


