	  => cr::res

  rule	time_varying_vars(DAELOW(vs,kv,e,se)) => res 
	-----------------------------------------
	time_varying_vars(DAELOW(VAR(cr,VARIABLE,_,_, _,_,_,_)::vs,kv,e,se)) 
	  => cr::res

  rule	time_varying_vars(DAELOW(vs,kv,e,se)) => res 
	-----------------------------------------
	time_varying_vars(DAELOW(VAR(cr,DUMMY_STATE,_,_, _,_,_,_)::vs,kv,e,se)) 
	  => cr::res

  rule	time_varying_vars(DAELOW(vs,kv,e,se)) => res 
