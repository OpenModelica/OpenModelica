  with "absyn.rml"	
  with "dictionary.rml"
  with "rmldump.rml"
  with "util.rml"

  datatype TypeVarsElement = VTELEMENT of Absyn.RMLType * Absyn.Ident list 

  datatype AlternativeTypeNames = ATYPES of Absyn.Ident * Absyn.Ident * bool

  datatype TransOptions  = IMP_PREFIX of string list 
						 | DUMMY_GENERATION 

