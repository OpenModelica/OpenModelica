  (* adrpo addded, check if there are special chars in the comment *)
  rule  External.getFirstIdent(com) => com &
        string_list(com) => lst_chars &
        check_lst_members([#".", #"-", #"/"], lst_chars) => true           
		--------------------------------------------------
